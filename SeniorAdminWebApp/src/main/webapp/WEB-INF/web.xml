<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AddNewCity</servlet-name>
        <servlet-class>demo.web.app.servlets.city.AddNewCity</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCurrentCity</servlet-name>
        <servlet-class>demo.web.app.servlets.city.DeleteCurrentCity</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCurrentCityJSP</servlet-name>
        <servlet-class>demo.web.app.servlets.DeleteCurrentCityJSP</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addNewArea</servlet-name>
        <servlet-class>demo.web.app.servlets.area.addNewArea</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCurrentArea</servlet-name>
        <servlet-class>demo.web.app.servlets.area.DeleteCurrentArea</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateArea</servlet-name>
        <servlet-class>demo.web.app.servlets.area.UpdateArea</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserLogin</servlet-name>
        <servlet-class>demo.web.app.servlets.login.UserLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddNewCity</servlet-name>
        <url-pattern>/addNewCity</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateCity</servlet-name>
        <servlet-class>demo.web.app.servlets.city.UpdateCity</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCity</servlet-name>
        <url-pattern>/updateCity</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCurrentCity</servlet-name>
        <url-pattern>/DeleteCurrentCity</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCurrentCityJSP</servlet-name>
        <url-pattern>/DeleteCurrentCityJSP</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addNewArea</servlet-name>
        <url-pattern>/addNewArea</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCurrentArea</servlet-name>
        <url-pattern>/DeleteCurrentArea</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateArea</servlet-name>
        <url-pattern>/UpdateArea</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserLogin</servlet-name>
        <url-pattern>/UserLogin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
